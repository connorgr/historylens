import random
import json
import sys
import MySQLdb

# Our JSON format:
# [ { "document_url" : string,
#     "origin" : number?,
#   X "authors" : [(string?, string?)]    // (firstName, lastName)
#     "topics" : [string]
#     "year" : number?
#   X "places_referenced" : { number : number }   // (place, count)
#   X "title" : string?
#   } ]

firstNames = ["John", "Justin", "Joe"]
lastNames = ["Picard", "Pombrio", "Politz"]

titleSize = [2, 3, 4]
titleWords = ["History", "Record", "Vietnam", "War", "Documentary"]



def randomAuthor():
    first = random.choice(firstNames)
    last = random.choice(lastNames)
    return [first, last]

def randomTitle():
    size = random.choice(titleSize)
    parts = [random.choice(titleWords) for i in range(size)]
    return parts.join(" ")

def randomDoc():
    doc = {}
    doc["document_url"] = "justinpombrio.net"
    doc["author"] = randomAuthor()
    doc["title"] = randomTitle()
    doc["places_referenced"] = []

